{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "cargo build"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo run client"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--",
				"server"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo run server"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"args": [
				"--target",
				"wasm32-unknown-unknown",
				"--no-default-features",
			],
			"label": "cargo run web"
		},
		{
			"type": "shell",
			"label": "runall",
			"dependsOn": [
				"cargo run server",
				"cargo run client"
			],
			"problemMatcher": []
		},
	]
}