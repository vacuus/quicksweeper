{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--features",
				"bevy_dylib"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "cargo build"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--features",
				"bevy_dylib"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo run"
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--target",
				"x86_64-pc-windows-gnu",
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "cargo release for Windows"
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--target",
				"x86_64-unknown-linux-gnu",
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "cargo release for linux"
		},
	]
}