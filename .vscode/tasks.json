{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "cargo build"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo run client"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--",
				"srv"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo run server"
		},
		{
			"type": "shell",
			"label": "runall",
			"dependsOn": [
				"cargo run server",
				"cargo run client"
			],
			"problemMatcher": []
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--no-default-features",
				"--target",
				"x86_64-pc-windows-gnu",
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "cargo release for windows"
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--no-efault-features",
				"--target",
				"x86_64-unknown-linux-gnu",
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "cargo release for linux"
		}
	]
}